<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/agents_poster_background"
    android:backgroundTint="@color/ungu_agent_card"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="214dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageViewMapSplash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_logo_vap"
            android:contentDescription="@string/maps"/>

        <TextView
            android:id="@+id/textViewMapName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="156dp"
            android:fontFamily="@font/valorant_font"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:text="@string/tes"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </FrameLayout>


</androidx.cardview.widget.CardView>